
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>

    $(function () {
        $("#sub").click(function () {
            $.ajax({
                url: '/admin/delete',
                type:'post',
                success: function (d) {
                    if (d.success == true) {
                        alert('已删除' + d.msg + '条记录');
                    }
                    else {
                        alert(d.msg);
                    }
                }
            }
            )

        })
    })
</script>
<a href="javascript:void(0)" id="sub" >清空2天前数据</a>

