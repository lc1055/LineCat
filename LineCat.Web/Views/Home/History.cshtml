@model List<LineCat.Web.Models.PriceHistory>
@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
@section header{
    <style>
        .panel-body {
            padding: 0px;
        }
    </style>
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        @if (Model != null){
                            <a href="/a/p/index/@Model[0].ProductID" target="_blank">@Model[0].Title</a>
                        }
                    </h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tr>
                            <th>名称</th>
                            <th>价格</th>
                            <th>时间</th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var i in Model)
                            {
                            <tr onmouseover="this.style.background='#f0f0f0'" onmouseout="this.style.background='none'">
                                <td>
                                    <a href="@i.Product.Url" target="_blank" title="点击购买">@i.Title</a>
                                    @if (i.IsLow == 1)
                                    { <text>(最低)</text>}
                                </td>
                                <td>@i.Price</td>
                                <td>@i.CreateDate.ToString("MM/dd HH:mm")</td>
                            </tr>

                            }
                        }
                    </table>
                </div>
            </div>


        </div>
        </div>
    </div>

