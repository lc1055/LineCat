@section footer{
<script>
    //setTimeout(r,1000*60*3);

    function r(){
        self.location.reload();
    }

    function GetProducts() {
        GetProductsByBrand('thermos');
        GetProductsByBrand('zojirushi');
        GetProductsByBrand('tiger');
    }

    function GetProductsByBrand(brandId) {
        $.ajax({
            url: '/home/getproducts',
            type: 'post',
            data: { brandId: brandId },
            success: function (d) {
                $.each(d, function (n, i) {
                    CreatePrice(brandId, i);
                });
            },
            error: function (r) {

            }

        });
    }

    function CreatePrice(brandId, product) {
        var tr = CreateTR(product);
        if ($("#tr_" + product.ID).length > 0) {
            $("#tr_" + product.ID).html(tr);
        }
        else {
            $("#tab_" + brandId).append(tr);
        }
    }

    function CreateTR(product) {
        var tr = "<tr>";
        tr += "<td><a href='" + product.Url + "' target='_blank'>" + product.Title + "</a>" + product.CreateDate;
        if (product.IsLow == 1) {
            tr += "(最低)";
        }
        tr += "</td>";
        tr += "<td>" + product.Price + "</td>";
        tr += "<td><a href='/h/" + product.ID + "' target='_blank'>史</a></td></tr>";
        return tr;
    }

    $(function () {
        GetProducts();

    });


    //对json里的时间序列化成yyyy-M-dd
    function DateFormatter(value) {
        try {
            var date = new Date(parseInt(value.replace(/\D/igm, "")));
            var y = date.getFullYear();
            var m = date.getMonth() + 1;
            var d = date.getDate();
            return y + '-' + m + '-' + d;
        } catch (e) {
            return "";
        }
    }
    function FormatJsonTime(json) {
        if (json != null) {
            var date = ConvertJSONDateToJSDateObject(json);
            return GetTime(date);
        }
        else {
            return "";
        }
    }
    function FormatJsonDate(json) {
        if (json != null) {
            var date = ConvertJSONDateToJSDateObject(json);
            return GetDateTime(date);
        }
        else {
            return "";
        }
    }

    function FormatJsonDay(json) {
        if (json != null) {
            var date = ConvertJSONDateToJSDateObject(json);
            return GetDate(date);
        }
        else {
            return "";
        }
    }

    /* Json时间转换成JS时间对象 */
    function ConvertJSONDateToJSDateObject(jsondate) {
        var date = new Date(parseInt(jsondate.replace("/Date(", "").replace(")/", ""), 10));
        return date;
    }
</script>


