@model List<LineCat.Web.Models.PriceHistory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

@section header{
    <style>
        .panel-body{padding:0px;}
        .table tbody>tr>td{padding:8px 2px;}
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
