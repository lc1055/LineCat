@model LineCat.Web.Models.Product
@{
    ViewBag.Title = "Index";
}
<script>

    $(function () {
        $("#sub").click(function () {
            $.ajax({
                url: '/a/p/delete',
                type: 'post',
                success: function (d) {
                    if (d.success == true) {
                        alert('已删除' + d.msg + '条记录');
                    }
                    else {
                        alert(d.msg);
                    }
                }
            });

        })
    })
</script>

@ViewBag.msg

<hr />
<a href="javascript:void(0)" id="sub">清空2天前数据</a>

@using (Html.BeginForm("create", "p")) 
{
    <table>
        <tr>
            <td>id</td>
            <td>@Html.TextBoxFor(m => m.ID)</td>
        </tr>
        <tr>
            <td>url</td>
            <td>@Html.TextBoxFor(m => m.Url)</td>
        </tr>
        <tr>
            <td>标题</td>
            <td>@Html.TextBoxFor(m => m.Title)</td>
        </tr>
        <tr>
            <td>提醒价格</td>
            <td>@Html.TextBoxFor(m => m.RecommendAlertPrice)</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" /></td>
        </tr>
    </table>




}
